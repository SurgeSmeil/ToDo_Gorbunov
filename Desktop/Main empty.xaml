<Window x:Class="Desktop.Main_empty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Main_empty" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Image x:Name="avatarImage" Margin="10,10,676,337" Source="/Image1.png" Stretch="Fill"/>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="208,79,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Height="42" Width="244"/>
        <Label Content="Создайте свою первую задачу!" HorizontalAlignment="Left" Margin="209,155,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Height="42" Width="377"/>
        <Button Content="Создать первую задачу" HorizontalAlignment="Left" Margin="290,248,0,0" VerticalAlignment="Top" Height="62" Width="272" Background="#FFF96060" BorderBrush="{x:Null}" Foreground="White" FontSize="20">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10 10 10 10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="LogOut" Content="Выход из профиля" Margin="16,0,636,247" VerticalAlignment="Bottom" Height="28" Click="LogOut_Click"/>
        <Button x:Name="ChangePhoto" Content="Изменить фото профиля" Margin="15,94,635,0" VerticalAlignment="Top" Height="34" Click="ChangePhoto_Click"/>

    </Grid>
</Window>
