<Window x:Class="Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="400,287,0,0" VerticalAlignment="Top" Height="48" Width="326" Background="#FFF96060" Foreground="White" BorderBrush="{x:Null}" FontSize="18" Click="Button_Click_1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15 15 5 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="401,351,0,0" VerticalAlignment="Top" Height="48" Width="327" Background="#FFF96060" Foreground="White" BorderBrush="{x:Null}" FontSize="18" Click="Button_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5 5 15 15"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image HorizontalAlignment="Left" Height="194" Margin="32,29,0,0" VerticalAlignment="Top" Width="229" Source="/logo.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.565"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Добро пожаловать!" HorizontalAlignment="Left" Margin="392,42,0,0" VerticalAlignment="Top" Height="50" Width="342" FontSize="28"/>
        <Label Content="Почта" HorizontalAlignment="Left" Margin="392,121,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox HorizontalAlignment="Left" Margin="400,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" BorderBrush="{x:Null}" CaretBrush="Black" Background="White" Foreground="#FFC2C2C2" Text="Введите почту"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="392,183,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.244,0.62"/>
        <TextBox HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Background="{x:Null}" BorderBrush="{x:Null}" Text="Введите пароль" Foreground="#FFC2C2C2"/>
        <Button x:Name="ChangePass" Content="Восстановить пароль" HorizontalAlignment="Left" Margin="605,248,0,0" VerticalAlignment="Top" Click="Button_Click" BorderBrush="{x:Null}" Background="{x:Null}" FontSize="14"/>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="0" Margin="401,235,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="401,178,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="401,237,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
    </Grid>
</Window>
