<Window x:Name="Regist1" x:Class="Desktop.Regist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="93*"/>
            <ColumnDefinition Width="486*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SubmitButton" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="86,312,0,0" VerticalAlignment="Top" Height="48" Width="326" Background="#FFF96060" Foreground="White" BorderBrush="{x:Null}" FontSize="18" Grid.Column="6">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15 15 5 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image HorizontalAlignment="Left" Height="194" Margin="22,29,0,0" VerticalAlignment="Top" Width="229" Source="/logo.png" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="5" Grid.Column="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.212"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Welcome back!" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Height="50" Width="342" FontSize="28" Grid.Column="6"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="83,65,0,0" VerticalAlignment="Top" FontSize="18" Width="154" Grid.Column="6"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="86,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" BorderBrush="{x:Null}" CaretBrush="Black" Background="White" Foreground="#FFC2C2C2" Text="Введите имя пользователя" Grid.Column="6"/>
        <Label Content="Ваша почта" HorizontalAlignment="Left" Margin="83,127,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.244,0.62" Grid.Column="6"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="86,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Background="{x:Null}" BorderBrush="{x:Null}" Text="exam@yandex.ru" Foreground="#FFC2C2C2" Grid.Column="6"/>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="0" Margin="88,184,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5" Grid.Column="6">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="88,125,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5" Grid.Column="6">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="88,184,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5" Grid.Column="6">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="83,184,0,0" VerticalAlignment="Top" FontSize="18" Grid.Column="6"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="88,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" BorderBrush="{x:Null}" CaretBrush="Black" Background="White" Foreground="#FFC2C2C2" Grid.Column="6"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="83,243,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.244,0.62" Grid.Column="6"/>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="0" Margin="88,307,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5" Grid.Column="6">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="89,241,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5" Grid.Column="6">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="89,300,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5" Grid.Column="6">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <TextBox x:Name="PasswordBox1" HorizontalAlignment="Left" Margin="86,217,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="220" BorderBrush="{x:Null}" Foreground="#FFC2C2C2" Grid.Column="6"/>
        <TextBox x:Name="PasswordBox2" HorizontalAlignment="Left" Margin="86,277,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="220" Background="{x:Null}" Foreground="#FFC2C2C2" BorderBrush="{x:Null}" Grid.Column="6"/>
        <Button x:Name="CloseButton" Content="Назад" HorizontalAlignment="Left" Margin="86,365,0,0" VerticalAlignment="Top" Height="48" Width="326" Background="#FFF96060" Foreground="White" BorderBrush="{x:Null}" FontSize="18" Grid.Column="6" Click="CloseButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5 5 15 15"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
