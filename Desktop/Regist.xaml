<Window x:Class="Desktop.Regist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Regist" Height="450" Width="800">
    <Grid>
        <Button x:Name="SubmitButton" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="400,312,0,0" VerticalAlignment="Top" Height="48" Width="326" Background="#FFF96060" Foreground="White" BorderBrush="{x:Null}" FontSize="18" Click="SubmitButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15 15 5 5"/>
                </Style>
            </Button.Resources>
        </Button>
        <Image HorizontalAlignment="Left" Height="194" Margin="32,29,0,0" VerticalAlignment="Top" Width="229" Source="/logo.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.212"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Welcome back!" HorizontalAlignment="Left" Margin="394,10,0,0" VerticalAlignment="Top" Height="50" Width="342" FontSize="28"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" Margin="397,65,0,0" VerticalAlignment="Top" FontSize="18" Width="154"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="400,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" BorderBrush="{x:Null}" CaretBrush="Black" Background="White" Foreground="#FFC2C2C2" Text="Введите имя пользователя"/>
        <Label Content="Ваша почта" HorizontalAlignment="Left" Margin="397,127,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.244,0.62"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="400,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="326" Background="{x:Null}" BorderBrush="{x:Null}" Text="exam@yandex.ru" Foreground="#FFC2C2C2"/>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="0" Margin="402,184,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="402,125,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="402,184,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="397,184,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="402,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" BorderBrush="{x:Null}" CaretBrush="Black" Background="White" Foreground="#FFC2C2C2"/>
        <Label Content="Повторите пароль" HorizontalAlignment="Left" Margin="397,243,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.244,0.62"/>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="0" Margin="402,307,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="403,241,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Border BorderBrush="#FFC2C2C2" BorderThickness="1" HorizontalAlignment="Left" Height="1" Margin="403,300,0,0" VerticalAlignment="Top" Width="326" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <TextBox x:Name="PasswordBox1" HorizontalAlignment="Left" Margin="400,217,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="220" BorderBrush="{x:Null}" Foreground="#FFC2C2C2"/>
        <TextBox x:Name="PasswordBox2" HorizontalAlignment="Left" Margin="400,277,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" Width="220" Background="{x:Null}" Foreground="#FFC2C2C2" BorderBrush="{x:Null}"/>
        <Button x:Name="CloseButton" Content="Назад" HorizontalAlignment="Left" Margin="400,365,0,0" VerticalAlignment="Top" Height="40" Width="326" Background="#FFF96060" Foreground="White" BorderBrush="{x:Null}" FontSize="16" Click="CloseButton_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5 5 15 15"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
